		<class>com.gmail.at.sichyuriyy.lab3.jpa.entities.Movie</class>
		<class>com.gmail.at.sichyuriyy.lab3.jpa.entities.Rating</class>
		<class>com.gmail.at.sichyuriyy.lab3.jpa.entities.WatchList</class>
		
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="update"/>
		</properties>
	</persistence-unit>
</persistence>
